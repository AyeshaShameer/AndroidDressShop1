<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ayesh.dressshop.MainActivity">

    <TextView
        android:text="TWINKLE FASHIONS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:id="@+id/textView"
        android:fontFamily="cursive"
        android:typeface="sans"
        android:textSize="24sp"
        android:lineSpacingExtra="10sp"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Bridal Wear"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/BridalImgBtn"
        android:layout_alignStart="@+id/BridalImgBtn"
        android:id="@+id/textView2"
        android:textColor="@android:color/black"
        android:padding="12dp"
        android:paddingBottom="12dp"
        android:paddingEnd="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:layout_toStartOf="@+id/textView3"
        android:layout_alignEnd="@+id/BridalImgBtn" />

    <TextView
        android:text="Casual Wear"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="@android:color/black"
        android:paddingBottom="12dp"
        android:paddingEnd="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:layout_alignStart="@+id/CasualImgBtn"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/BridalImgBtn" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/bride"
        android:id="@+id/BridalImgBtn"
        android:contentDescription="Bridal Wear"
        style="@style/Widget.AppCompat.ImageButton"
        android:scaleType="fitXY"
        android:maxHeight="@android:dimen/notification_large_icon_height"
        android:maxWidth="@android:dimen/notification_large_icon_width"
        android:layout_alignTop="@+id/CasualImgBtn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="43dp" />

    <TextView
        android:text="Party Wear"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textColor="@android:color/black"
        android:paddingEnd="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:layout_below="@+id/BridalImgBtn"
        android:layout_alignStart="@+id/PartyImgBtn"
        android:layout_marginTop="67dp" />

    <TextView
        android:text="Kurtys"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textColor="@android:color/black"
        android:paddingEnd="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignStart="@+id/KidImgBtn" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:id="@+id/KidImgBtn"
        android:layout_alignTop="@+id/PartyImgBtn"
        android:layout_alignStart="@+id/BridalImgBtn"
        android:contentDescription="Kids Wear"
        android:elevation="1dp"
        android:background="@drawable/kurty" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/party"
        android:id="@+id/PartyImgBtn"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/textView4"
        android:layout_alignEnd="@+id/CasualImgBtn" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/casual"
        android:id="@+id/CasualImgBtn"
        android:layout_marginEnd="55dp"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
